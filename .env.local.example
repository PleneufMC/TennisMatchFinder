# ===========================================
# TennisMatchFinder - Environment Variables Example
# ===========================================
# Copy this file to .env.local and fill in the values

# ------------------------------------------
# Neon Database
# Get from: https://console.neon.tech/
# ------------------------------------------
DATABASE_URL="postgresql://user:password@host.neon.tech/database?sslmode=require"

# ------------------------------------------
# NextAuth Configuration
# Generate secret: openssl rand -base64 32
# ------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-change-in-production-min-32-chars

# ------------------------------------------
# Email Provider (Magic Link)
# Configure with your SMTP provider:
# - Resend: https://resend.com
# - SendGrid: https://sendgrid.com
# - Mailgun: https://mailgun.com
# ------------------------------------------
EMAIL_SERVER_HOST=smtp.resend.com
EMAIL_SERVER_PORT=465
EMAIL_SERVER_USER=resend
EMAIL_SERVER_PASSWORD=re_your_api_key
EMAIL_FROM="TennisMatchFinder <noreply@yourdomain.com>"

# ------------------------------------------
# Application Configuration
# ------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=TennisMatchFinder

# ------------------------------------------
# N8N Webhook (Optional - for AI bot integration)
# ------------------------------------------
N8N_WEBHOOK_SECRET=dev_secret_change_in_prod_minimum_32_characters
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/tennismatchfinder

# ------------------------------------------
# Pusher (Real-time Chat)
# Get from: https://pusher.com/
# Create a new Channels app and copy the credentials
# ------------------------------------------
PUSHER_APP_ID=your_app_id
PUSHER_KEY=your_key
PUSHER_SECRET=your_secret
PUSHER_CLUSTER=eu
NEXT_PUBLIC_PUSHER_KEY=your_key
NEXT_PUBLIC_PUSHER_CLUSTER=eu

# ------------------------------------------
# Analytics & Monitoring (Google Analytics 4)
# Get from: https://analytics.google.com/
# 1. Create a GA4 property for tennismatchfinder.net
# 2. Go to Admin > Data Streams > Web > Add stream
# 3. Copy the Measurement ID (starts with G-)
# ------------------------------------------
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ------------------------------------------
# Optional: Sentry Error Tracking
# ------------------------------------------
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ------------------------------------------
# Optional: Meta Pixel (Facebook/Instagram Ads)
# Get from: https://business.facebook.com/events_manager
# ------------------------------------------
# NEXT_PUBLIC_FB_PIXEL_ID=XXXXXXXXXXXXXXX
