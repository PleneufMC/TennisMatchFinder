# ================================
# TennisMatchFinder - Variables d'environnement
# ================================
# Copiez ce fichier vers .env.local et remplissez les valeurs

# ================================
# NEON DATABASE
# ================================
# Connection string depuis console.neon.tech
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# ================================
# NEXTAUTH
# ================================
# Secret pour signer les tokens JWT (générer avec: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# URL de l'application (sans slash final)
NEXTAUTH_URL="http://localhost:3000"

# ================================
# EMAIL (SMTP pour Magic Link)
# ================================
# Option 1: Utiliser Gmail (activer accès app moins sécurisées)
# Option 2: Utiliser un service SMTP comme SendGrid, Mailgun, etc.
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="TennisMatchFinder <noreply@tennismatchfinder.net>"

# ================================
# N8N WEBHOOKS (Agent IA)
# ================================
# Secret pour authentifier les webhooks N8N
N8N_WEBHOOK_SECRET="your-webhook-secret"

# URL du webhook N8N (optionnel)
N8N_WEBHOOK_URL="https://your-n8n-instance.com/webhook/xxx"

# ================================
# APPLICATION
# ================================
# URL publique de l'application
NEXT_PUBLIC_APP_URL="https://tennismatchfinder.net"

# Nom de l'application
NEXT_PUBLIC_APP_NAME="TennisMatchFinder"

# Club par défaut
NEXT_PUBLIC_DEFAULT_CLUB_NAME="Tennis Club"
NEXT_PUBLIC_DEFAULT_CLUB_SLUG="mccc"

# ================================
# OPTIONAL - ANALYTICS & MONITORING
# ================================
# Google Analytics
NEXT_PUBLIC_GA_ID=""

# Sentry
SENTRY_DSN=""

# Debug mode
DEBUG="false"
